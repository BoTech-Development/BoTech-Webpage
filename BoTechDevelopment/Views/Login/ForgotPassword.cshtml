@using BoTechDevelopment.Models.LoginSystem.Frontend
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>Forgot Password</h1>
<h4>Please enter your Account Details.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="yourEmail" class="control-label"></label>
                <input asp-for="yourEmail" class="form-control" />
                <span asp-validation-for="yourEmail" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SendOverEmail" /> @Html.DisplayNameFor(model => model.SendOverEmail)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SendOverSMS" /> @Html.DisplayNameFor(model => model.SendOverSMS)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@{
    if(Model.SendOverEmail && Model.SendOverSMS)
